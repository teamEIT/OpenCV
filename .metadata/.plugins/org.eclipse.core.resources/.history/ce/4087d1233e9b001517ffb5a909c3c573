#include "opencv2/highgui/highgui.hpp"
#include "opencv2/core/core.hpp"

#include <iostream>
#include <string>

using namespace std;
using namespace cv;

int main(int argc, char** argv)	{
	cout << "The first program." << endl;
	string imageName("logo.png");
	string windowName("Read image");

	if(argc > 1) {
		imageName = argv[1];
	}

	Mat img = imread(imageName.c_str(), CV_LOAD_IMAGE_COLOR);
	namedWindow(windowName.c_str(), CV_WINDOW_AUTOSIZE);
	imshow(windowName.c_str(), img);

	waitKey(0);
	return 0;
}
